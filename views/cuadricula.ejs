    <main> 
        <div class="contenedor">
          <a href="/listado" class="button"> Ver en lista</a> 
        </div>
         
      
              <div class="modal" id="modal">
                <div class="modal-content">
                  <img src="" alt="" class="modal-img" id="modal-img">
                </div>
                <div class="modal-boton" id="modal-boton">X</div>
              </div>
      
              <div class="container-productos" id="lista-productos">
      
                  <% producto.forEach(product => { %>
                    <tr>
                      <div class="card">
                      
                      <h2><a href="/producto/<%=product.id%>"><%= product.name %></a></h2>
                     
                      
                      <p>Precio: USD.<small class="precio"><%= product.price %></small></p>
                      <p>Cantidad: <small class="precio"><%= product.quantity %></small></p><br>
                    <% imagen.forEach(foto => { %>
                    <% if(product.id == foto.producto_id) { %>
                      <div class="contenedor-imagen">
                        <img src="<%=foto.url%>">
                    </div>
                    <% } else { %>
                       <p></p>
                    <% }%>
                    <% }); %>
      
      
      
      
